Bootstrap: docker
From: rockylinux/rockylinux:9

%labels
    Author Conor E. Olive
    Version 1.0

%environment
    # make sure MPI and custom‚Äêbuild tools are on your PATH
    export PATH=/usr/local/bin:$PATH

%post
    # update the system
    dnf -y update --exclude=filesystem

    # enable module commands and PowerTools (if you need extra devel libs)
    dnf install -y dnf-plugins-core
    dnf config-manager --set-enabled crb

    # add EPEL
    dnf install -y epel-release
    dnf -y update

    # enable RPM Fusion Free & Non-Free (for ffmpeg and friends)
    dnf install -y \
      https://mirrors.rpmfusion.org/free/el/rpmfusion-free-release-9.noarch.rpm \
      https://mirrors.rpmfusion.org/nonfree/el/rpmfusion-nonfree-release-9.noarch.rpm

    dnf -y update --refresh --best --allowerasing

    # development toolchain
    dnf install -y \
        cmake \
        gcc \
        gcc-c++ \
        gcc-gfortran \
        make \
        gawk \
        gnuplot \
        ImageMagick \
        ffmpeg \
        graphviz \
        valgrind \
        gifsicle \
        pstoedit \
        gtest \
        doxygen

    # scientific libraries
    dnf install -y \
        openmpi-devel \
        eigen3-devel \
        hdf5-devel \
        hdf5-openmpi-devel

    # clean up to save space
    dnf clean all

%runscript
    # default action when you run the container
    exec /bin/bash "$@"
